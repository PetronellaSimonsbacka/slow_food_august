<title>Sinatra Warden</title>

<h1>Slow food tastes better</h1>

<style>
h1 {
    display: block;
    font-size: 7em;
    margin-top: 0.2em;
    margin-bottom: 0;
    margin-left: 0;
    margin-right: 0;
    font-weight: thin;
    font-family:cursive;
}
</style>


<p>
  <% if current_user %>
    Logged in as <%= current_user.username %>
    <a href="/auth/logout">Log Out</a></p>
  <% else %>

    <a href="/auth/login">Log In</a>
  <% end %>

  <% if flash[:success] %>
    <div style="color:blue;">
      <%= flash[:success] %>
    </div>
  <% end %>

  <% if flash[:error] %>
    <div style="color:red;">
      <%= flash[:error] %>
    </div>
  <% end %>

  <%= yield %>

  <style>
  h1 {
    text-align: center;
}

}
</style>

